<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.AgregaradbFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Pregunta3"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/preg_todb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Pregunta"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/corr_todb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Respuesta Correcta"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/incorr_todb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Respuestas Incorrectas"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/send_todb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="25dp"
            android:text="Guardar" />
    </LinearLayout>

</FrameLayout>