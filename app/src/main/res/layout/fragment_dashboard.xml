<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="Pregunta3"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/preg_txt"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:gravity="center"
        android:textSize="26sp" />

    <Button
        android:id="@+id/opc1_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/botones_cel"
        android:gravity="center"
        android:text="Button"
        tools:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/opc2_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Button"
        android:backgroundTint="@color/botones_cel"
        tools:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/opc3_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Button"
        android:backgroundTint="@color/botones_cel"
        tools:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/opc4_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/botones_cel"
        android:text="Button"
        tools:layout_marginBottom="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/premio_txt"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center" />

    <Button
        android:id="@+id/sig_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siguiente" />

</LinearLayout>